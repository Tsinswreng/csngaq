<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MyAvaloniaApp.MainWindow"
        Title="Avalonia Textbox Copy">
    <StackPanel Margin="20">
        <TextBlock Text="TextBox A:" Margin="0, 10, 0, 5"/>
        <TextBox x:Name="TextBoxA" TextChanged="TextBoxA_TextChanged"/>
        <TextBlock Text="TextBox B:" Margin="0, 10, 0, 5"/>
        <TextBox x:Name="TextBoxB" IsReadOnly="True"/>
        <Button Content="Copy Text" Click="CopyTextButton_Click" Margin="0, 10, 0, 0"/>
    </StackPanel>
</Window>